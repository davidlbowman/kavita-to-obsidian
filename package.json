{
	"name": "kavita-to-obsidian",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"format": "biome format --write",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"integration:up": "bun run test-integration/scripts/create-test-epub.ts && docker compose -f test-integration/docker-compose.yml up -d",
		"integration:down": "docker compose -f test-integration/docker-compose.yml down",
		"integration:clean": "docker compose -f test-integration/docker-compose.yml down -v && rm -rf test-integration/config test-integration/.env.test test-integration/books",
		"integration:setup": "bun run test-integration/scripts/setup-kavita.ts",
		"integration:logs": "docker compose -f test-integration/docker-compose.yml logs -f"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@effect/vitest": "^0.27.0",
		"@types/bun": "latest",
		"obsidian": "^1.10.3",
		"vitest": "^4.0.15"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@effect/platform": "^0.93.6",
		"effect": "^3.19.9"
	}
}
